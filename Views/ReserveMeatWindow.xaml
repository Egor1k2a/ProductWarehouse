<Window x:Class="ProductWarehouse.Views.ReserveMeatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductWarehouse.Views"
        mc:Ignorable="d"
        Title="ReserveMeatWindow" Height="400" Width="300"
        Name="ReserveMeatWnd">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
                <TextBlock Text="Наименование"/>
                <TextBox Text="{Binding SelectedMeat.NameOfProduct}" Margin="0 0 0 5"/>
                <TextBlock Text="Сколько зарезервировать (в кг)"/>
                <TextBox Text="{Binding WeightReserve}" Margin="0 0 0 5"/>
            </StackPanel>
            <Button Grid.Row="1" Content="Зарезервировать продукт" Command="{Binding ReserveMeat}" CommandParameter="{Binding ElementName=ReserveMeatWnd}"/>
        </Grid>
    </Grid>
</Window>
